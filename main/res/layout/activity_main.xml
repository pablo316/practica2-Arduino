<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:id="@+id/menu">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Probar conexiÃ³n"
            android:id="@+id/textView"
            android:layout_toLeftOf="@+id/sensorView0"
            android:layout_toStartOf="@+id/sensorView0"
            android:layout_marginRight="41dp"
            android:layout_marginEnd="41dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/linearSeparador"
            android:layout_gravity="center_vertical"
            android:id="@+id/lineaSeparador"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="111dp">

        </LinearLayout>

        <Button
            android:id="@+id/buttonOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ROBOT"
            android:layout_alignBottom="@+id/lineaSeparador"
            android:layout_toRightOf="@+id/tv_sendorldr"
            android:layout_toEndOf="@+id/tv_sendorldr" />

        <Button
            android:id="@+id/buttonOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invernadero"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:layout_above="@+id/txtString"
            android:layout_toRightOf="@+id/buttonOn"
            android:layout_toEndOf="@+id/buttonOn" />

        <TextView
            android:id="@+id/txtString"
            android:layout_width="match_parent"
            android:layout_height="384dp"
            android:text="Datos recibidos ="
            android:textSize="15sp"
            android:layout_below="@+id/lineaSeparador"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="11dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=" Datos    "
            android:id="@+id/tv_sendorldr"
            android:layout_gravity="center_vertical"
            android:layout_alignBottom="@+id/lineaSeparador"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/controles">

        <Button
            android:text="Izquierda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Izquierda"
            android:layout_alignBaseline="@+id/Derecha"
            android:layout_alignBottom="@+id/Derecha"
            android:layout_toLeftOf="@+id/Abajo"
            android:layout_toStartOf="@+id/Abajo" />

        <Button
            android:text="Arriba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="111dp"
            android:id="@+id/Arriba"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="Abajo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:id="@+id/Abajo"
            android:layout_below="@+id/Izquierda"
            android:layout_alignLeft="@+id/Arriba"
            android:layout_alignStart="@+id/Arriba" />

        <Button
            android:text="Derecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:id="@+id/Derecha"
            android:layout_below="@+id/Arriba"
            android:layout_toRightOf="@+id/Arriba"
            android:layout_toEndOf="@+id/Arriba"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp" />

        <TextView
            android:text="Control Robot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:id="@+id/textView2"
            android:layout_alignRight="@+id/Derecha"
            android:layout_alignEnd="@+id/Derecha"
            android:textAppearance="@style/TextAppearance.AppCompat" />

    </RelativeLayout>

</RelativeLayout>